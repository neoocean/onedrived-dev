{
  "scan_interval_sec": {
    "type": "integer",
    "minimum": 60,
    "description": "@lang['config.scan_interval_sec.desc']"
  },
  "num_workers": {
    "type": "integer",
    "minimum": 1,
    "description": "@lang['config.num_workers.desc']"
  },
  "webhook_renew_interval_sec": {
    "type": "integer",
    "minimum": 30,
    "description": "@lang['config.webhook_renew_interval_sec.desc']"
  },
  "webhook_port": {
    "type": "integer",
    "minimum": 0,
    "maximum": 65535,
    "description": "@lang['config.webhook_port.desc']"
  },
  "start_delay_sec": {
    "type": "integer",
    "minimum": 0,
    "description": "@lang['config.start_delay_sec.desc']"
  },
  "logfile_path": {
    "type": "string",
    "subtype": "file",
    "to_abspath": true,
    "create_if_missing": true,
    "allow_empty": true,
    "permission": "a",
    "description": "@lang['config.logfile_path.desc']"
  },
  "webhook_type": {
    "type": "string",
    "choices": ["direct", "ngrok"],
    "description": "@lang['config.webhook_type.desc']"
  },
  "webhook_host": {
    "type": "string",
    "allow_empty": true,
    "description": "@lang['config.webhook_host.desc']"
  },
  "webhook_action_delay_sec": {
    "type": "integer",
    "minimum": 10,
    "description":  "@lang['config.webhook_action_delay_sec.desc']"
  }
}
